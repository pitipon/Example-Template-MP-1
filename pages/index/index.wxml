<!-- Using TEMPLATE -->
<view>
    <template is="myMessage" data="{{name, message}}"/>
    <template is="myMessage" data="{{...item}}"/>
</view>

<!-- TEMPLATE -->
<template name="myMessage">
    <!-- { name: string, message: string } -->
  <view style="padding: 10px; margin: 10px; border: 5px solid green; border-radius: 20px;">
    <text> {{name}} say: {{message}} </text>
  </view>
</template>